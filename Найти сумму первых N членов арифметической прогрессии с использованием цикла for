Задание 1: Найти сумму первых N членов арифметической прогрессии с использованием цикла for.

using System;

namespace ConsoleApp4
{
    class Program
    {
        static void Main(string[] args)
        {
            int n;
            int s = 0;
            n = Convert.ToInt32(Console.ReadLine());
            for (int i = 0; i <= n; i++)
            {
               s +=i;
            }
            Console.WriteLine(s);
        }
    }
}
